
@{
    ViewBag.Title = "TeacherInfo";
    Layout = "~/Views/Shared/_TeacherPage.cshtml";
}

<div style="text-align:center;margin-top:50px"><h1>个人信息</h1></div>
<div class="container" style="margin-top:50px;">

    <table class="table tbale-bordered table-hover">
        <tr>
            <td>编号</td>
            <td>@Model.t_id</td>
        </tr>
        <tr>
            <td>姓名</td>
            <td>@Model.t_name</td>
        </tr>
        <tr>
            <td>年龄</td>
            <td>@Model.t_age</td>
        </tr>
        <tr>
            <td>教龄</td>
            <td>@Model.teachingAge</td>
        </tr>
        <tr>
            <td>性别</td>
            <td>@Model.sex</td>
        </tr>
        <tr>
            <td>电话</td>
            <td>@Model.t_Phone</td>
        </tr>
        <tr>
            <td>邮箱</td>
            <td>@Model.t_Email</td>
        </tr>
    </table>
</div>

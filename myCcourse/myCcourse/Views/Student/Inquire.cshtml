
@{
    ViewBag.Title = "Inquire";
    Layout = "~/Views/Shared/_LayoutPagehead.cshtml";
}

<div style="text-align:center;margin-top:50px"><h1>课程查询</h1></div>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>编号</td>
                <td>课程</td>
                <td>发布人</td>
                <td>地点</td>
                <td>时间</td>
                <td>备注</td>
                <td>操作</td>
            </tr>
        </thead>
        <tbody id="show">
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.shop_id</td>
                <td>@item.teacher.teacher_Type</td>
                <td>@item.teacher.t_name</td>
                <td>@item.inform.place</td>
                <td>@item.inform.datatime</td>
                <td>@item.inform.message</td>
                <td>
                    @using (Ajax.BeginForm("Delte", "student",new { shop_id= item.shop_id }, new AjaxOptions()
                    {
                        Confirm = "确认提交？",
                        HttpMethod = "get",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "show"
                    }))
                    {
                        <button class="btn btn-danger">删除</button>
                    }
                     
                </td>
            </tr>     
            }


        </tbody>
        </table>
</div>
